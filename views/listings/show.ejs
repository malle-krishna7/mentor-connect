<% layout("/layouts/boilerplate") %>
<style>
  a {
      text-decoration: none; /* This removes the underline */
  }
</style>
<div class="row">
  <div class="col-8 offset-2">
    <div class="col-8 offset-2">
    <h3><%= listing.name %></h3>
  </div>
    <div class="card col-6 offset-2 show-card listing-card">
        <img src="<%= listing.image %>" class="card-img-top show-img" alt="card-img" >
        <div class="card-body">
          <h5 class="card-title"><%= listing.name %></h5>
          <p class="card-text"><%= listing.bio %></p>
          <br>
          <button class="btn btn-primary" ><a href="/listings/<%= listing._id %>/edit" style="color: white;" style="text-decoration: none;">Edit your profile</a></button>
          <br><br>
          <form method="POST" action="/listings/<%=listing._id%>?_method=DELETE">
            <button class="btn btn-danger">DELETE your profile</button>
          </form>
        </div>
      </div>
  </div>
  <hr>
  <div class="col-8 offset-2 mb-3" >
    <h4>Leave a Review</h4>
    <form action="/listings/<%= listing.id %>/reviews" method="post" novalidate class="needs-validation">
      <div class="mb-3 mt-3">
        <label for="rating" class="form-label">Rateing</label>
        <input type="range" min="1" max="5" id="rating" name="review[rating]" class="form-range">
      </div>
      <div class="mb-3 mt-3">
        <label for="comment" class="form-label" aria-required="true">Comment</label>
        <textarea name="review[comment]" id="comment" cols="36" rows="6" class="form-control" style="width:100%;"></textarea>
      </div>
      <button class="btn btn-outline-dark">submit</button>
    </form>
    <hr>

    <p><b>All Review</b></p>
    <div class="row">
    <% for(review of listing.reviews){ %>
    <div class="card col-5 ms-3 mb-3">
      <div class="card-body">
        <p class="card-text"><%= review.comment %></p>
        <p class="card-text"> ‚≠ê <%= review.rating %> stars</p>
      </div>
      <form class="mt-3 mb-2" method="post" action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE">
        <button class="btn btn-sm btn-dark">Delete</button></form>
  
    </div>
    <% } %>
  </div>
  </div>
</div>

